# ======================
# ОСНОВНЫЕ НАСТРОЙКИ
# ======================
# Тестовый режим (true/false)
DRY_RUN=false

# Проверка SSL сертификатов (true/false)
VERIFY_SSL=false

# Размер пакета для обработки
BATCH_SIZE=50

# Ограничение количества хостов (пусто = все)
HOST_LIMIT=

# Таймаут подключений в секундах
TIMEOUT=10

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Директория для логов
LOG_DIR=logs

# ======================
# ZABBIX
# ======================
ZABBIX_URL=http://zabbix-cloud.ttc.kz/
ZABBIX_USER=your_zabbix_user
ZABBIX_PASSWORD=your_zabbix_password

# ======================
# NETBOX
# ======================
NETBOX_URL=http://netbox.local
NETBOX_TOKEN=your_netbox_token_here

# ======================
# REDIS (для отслеживания изменений)
# ======================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_KEY_PREFIX=zabbix_host:
REDIS_TTL=86400

# ======================
# TELEGRAM (уведомления)
# ======================
TELEGRAM_ENABLED=true
# Токен бота от @BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz1234567890
# Chat ID (можно узнать через @userinfobot или группы)
TELEGRAM_CHAT_ID=-1001234567890
# Формат сообщений: HTML или Markdown
TELEGRAM_PARSE_MODE=HTML
# Тихие уведомления (true/false)
TELEGRAM_DISABLE_NOTIFICATION=false