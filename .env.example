# ======================
# ОСНОВНЫЕ НАСТРОЙКИ
# ======================
# Тестовый режим (true/false)
DRY_RUN=false

# Проверка SSL сертификатов (true/false)
VERIFY_SSL=false

# Размер пакета для обработки
BATCH_SIZE=50

# Ограничение количества хостов (пусто = все)
HOST_LIMIT=

# Таймаут подключений в секундах
TIMEOUT=10

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Директория для логов
LOG_DIR=logs

# ======================
# ZABBIX
# ======================
ZABBIX_URL=https://zabbix-cloud.ttc.kz/
ZABBIX_USER=tadm.bisengaliyev
ZABBIX_PASSWORD=pass

# ======================
# NETBOX
# ======================
NETBOX_URL=https://web-netbox.t-cloud.kz/
NETBOX_TOKEN=token

# ======================
# REDIS (для отслеживания изменений)
# ======================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_KEY_PREFIX=zabbix_host:
REDIS_TTL=86400

# ======================
# TELEGRAM (уведомления)
# ======================
TELEGRAM_ENABLED=true
# Токен бота от @BotFather
TELEGRAM_BOT_TOKEN=token
# Chat ID (можно узнать через @userinfobot или группы)
TELEGRAM_CHAT_ID=id
# Формат сообщений: HTML или Markdown
TELEGRAM_PARSE_MODE=HTML
# Тихие уведомления (true/false)
TELEGRAM_DISABLE_NOTIFICATION=false

# ======================
# НАСТРОЙКИ УДАЛЕНИЯ (FIX #2)
# ======================
# Через сколько дней неактивности помечать как decommissioning
DECOMMISSION_AFTER_DAYS=1

# Через сколько дней в decommissioning удалять физически
DELETE_AFTER_DECOMMISSION_DAYS=2

# Включить физическое удаление (ОСТОРОЖНО! false по умолчанию)
ENABLE_PHYSICAL_DELETION=true

# ======================
# ЗАЩИТА ДАННЫХ (FIX #4)
# ======================
# Поля которые НЕ перезаписываются из Zabbix (через запятую)
# Пример: asset_tag,comments,description
PROTECTED_FIELDS=

# Custom fields которые НЕ перезаписываются (через запятую)
# Пример: manual_notes,warranty_date
PROTECTED_CUSTOM_FIELDS=

# ======================
# НАСТРОЙКИ ОЧИСТКИ (FIX #3)
# ======================
# Что делать с orphaned IP адресами: deprecated, delete, keep
ORPHANED_IP_ACTION=deprecated

# ======================
# ПРОВЕРКИ (FIX #5)
# ======================
# Проверять конфликты позиций в стойках (true/false)
CHECK_RACK_CONFLICTS=true

MANAGED_DEVICE_ROLES=Server
